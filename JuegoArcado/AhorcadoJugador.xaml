        <Button Content="Salir" FontSize="25" Background="OrangeRed" HorizontalAlignment="Left" Margin="798,0,0,0" Grid.Row="3" VerticalAlignment="Center" Height="48" Width="125" Click="BtnRendirse"/>


    </Grid>
</Window>
