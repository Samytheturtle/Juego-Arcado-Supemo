<Window x:Class="JuegoArcado.AhorcadoJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoArcado"
        mc:Ignorable="d"
        Title="Ahorcado Jugador" Height="800" Width="960">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="ImagenesJuegos/FondoWestern.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Label Content="AHORCADO SUPREMO" FontSize="30" FontStyle="Oblique" FontWeight="Bold" FontStretch="UltraCondensed" HorizontalAlignment="Left" Margin="16,0,0,0" VerticalAlignment="Center" Width="346" Height="50"/>

        <Label Content="Sheriff (Retador):" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="16,76,0,0" VerticalAlignment="Top" Width="286" Grid.Row="1"/>
        <Label x:Name="nombreRetador" Content="Nombre Retador" FontSize="18" HorizontalAlignment="Left" Margin="16,110,0,0" VerticalAlignment="Top" Width="286" Grid.Row="1"/>
        <Image x:Name="SpriteAhorcado" Source="/AhorcadoSprite1.png" HorizontalAlignment="Center" Height="338" Width="338" Margin="0,85,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Stretch="Uniform"/>

        <Label Content="Descripción de la palabra:" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="662,76,0,0" VerticalAlignment="Top" Width="286" Grid.Row="1"/>
        <Label x:Name="pista" Content="Descripción" FontSize="18" HorizontalAlignment="Left" Margin="662,110,0,0" VerticalAlignment="Top" Width="286" Grid.Row="1" Height="139"/>

        <Label x:Name="lbProgresoPalabra" Content="A  H  O  R  C  A  -  O " FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,338,0,0" Grid.Row="1" VerticalAlignment="Top" Width="794" HorizontalContentAlignment="Center" Height="52" Background="AntiqueWhite"/>

        <Label x:Name="lbInstruccionJugador" Foreground="White" Content="Selecciona una Letra" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" BorderBrush="OrangeRed" BorderThickness="3" Grid.Row="2" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="646"/>
