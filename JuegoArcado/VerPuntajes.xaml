<Window x:Class="JuegoArcado.VerPuntajes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoArcado"
        mc:Ignorable="d"
        Title="VerPuntajes" Height="450" Width="800">
    <Grid>
        <Image Source="/FondoVerPuntajes.jpg" Stretch="Fill"/>
        <DataGrid x:Name="dgJugadoresPuntajes" Margin="179,24,179,24" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFF0F0F0" Opacity="0.75">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Jugador" Width="*" Binding="{Binding Nombre}"/>
                <DataGridTextColumn Header="Correo" Width="*" Binding="{Binding Apellidos}"/>
                <DataGridTextColumn Header="Partidas Jugadas" Width="*" Binding="{Binding Matricula}"/>
                <DataGridTextColumn Header="Puntaje global" Width="*" Binding="{Binding Edad}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
